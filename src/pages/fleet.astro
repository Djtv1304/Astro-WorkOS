                        price={105}
                        range={326}
                        seats={7}
                        rating={4.8}
                        features={['Falcon Wing Doors', 'Autopilot', 'Tow Package']}
                        category="SUV"
                />

                <VehicleCard
                        name="Audi e-tron"
                        image="https://images.pexels.com/photos/110844/pexels-photo-110844.jpeg?auto=compress&cs=tinysrgb&w=800"
                        price={115}
                        range={222}
                        seats={5}
                        rating={4.6}
